//Write A program To Print Sum of two Matrix

#include<iostream>
using namespace std;
int main(){
    int r,c;
    cout<<"enter no. of Rows :";
    cin>>r;
    cout<<"enter no. of Columns :";
    cin>>c;
    int arr1[r][c],n1=r*c;
    cout<<"Enter "<<n1<<" elements for Matrix 1 :\n";
    for(int i=0;i<r;i++){
        for(int j=0;j<c;j++){
            cin>>arr1[i][j];
        }
    }
    int arr2[r][c],n2=r*c;
    cout<<"Enter "<<n2<<" elements for Matrix 2 :\n";
    for(int i=0;i<r;i++){
        for(int j=0;j<c;j++){
            cin>>arr2[i][j];
        }
    }
    int arr3[r][c];
    for(int i=0;i<r;i++){
        for(int j=0;j<c;j++){
            arr3[i][j]=arr1[i][j]+arr2[i][j];
        }
        cout<<endl;
}
for(int i=0;i<r;i++){
        for(int j=0;j<c;j++){
            cout<<arr3[i][j]<<"\t";
        }
        cout<<endl;
}
}
